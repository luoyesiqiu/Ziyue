<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:subtitleTextColor">@color/green</item>
        <item name="android:color">@color/green</item>
        <item name="android:textColorPrimary">@color/green</item>
        <item name="android:textColorSecondary">@color/green</item>
        <item name="android:actionMenuTextColor">@color/green</item>
        <item name="android:colorBackgroundFloating">@color/green</item>
        <item name="android:textColorAlertDialogListItem">@color/green</item>
        <item name="colorButtonNormal">@color/green</item>
        <item name="android:alertDialogTheme">@style/Theme.Dialog.Alert.Self</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
    </style>
    <!--提示框-->
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">#00ff00</item>
        <item name="android:textColorPrimary">@color/green</item>
        <item name="android:windowBackground">@android:drawable/alert_dark_frame</item>
    </style>

    <!--对话框-->
    <style name="Theme.Dialog.Alert.Self"
        parent="@style/Theme.AppCompat.Light.Dialog">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">#00ff00</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:windowBackground">@android:drawable/alert_dark_frame</item>

    </style>
</resources>
